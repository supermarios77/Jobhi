// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      UserRole @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  orders    Order[]
  
  @@map("users")
}

model Category {
  id          String   @id @default(cuid())
  name        String
  nameEn      String
  nameNl      String
  nameFr      String
  slug        String   @unique
  description String?  @db.Text
  imageUrl    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  dishes      Dish[]
  
  @@map("categories")
}

model Dish {
  id            String   @id @default(cuid())
  name          String
  nameEn        String
  nameNl        String
  nameFr        String
  slug          String   @unique // URL-friendly slug for SEO
  description   String?  @db.Text
  descriptionEn String?  @db.Text
  descriptionNl String?  @db.Text
  descriptionFr String?  @db.Text
  price         Float
  imageUrl      String?
  categoryId    String?
  rating        Float?   @default(0)
  quantity      String?  // e.g., "6 pieces", "10 pieces"
  weight        String?  // e.g., "500g", "1kg"
  allergens     String[] // Array of allergen strings
  ingredients   String[] // Array of ingredient strings
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  category      Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  orderItems    OrderItem[]
  
  @@map("dishes")
}

model Order {
  id            String   @id @default(cuid())
  userId        String
  totalAmount   Float
  status        OrderStatus @default(PENDING)
  stripePaymentIntentId String?
  // Delivery information
  firstName     String?
  lastName      String?
  email         String?
  phone         String?
  address       String?
  city          String?
  postalCode    String?
  country       String?
  deliveryInstructions String? @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items         OrderItem[]
  
  @@map("orders")
}

enum OrderStatus {
  PENDING
  PAID
  PREPARING
  SHIPPED
  DELIVERED
  CANCELLED
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  dishId    String
  quantity  Int
  price     Float
  size      String?  // e.g., "Regular", "Large"
  createdAt DateTime @default(now())
  
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  dish      Dish     @relation(fields: [dishId], references: [id])
  
  @@map("order_items")
}

model CartSession {
  id         String   @id @default(cuid())
  sessionId  String   @unique @map("session_id") // Cookie session ID
  items      Json     // Array of CartItem objects
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  expiresAt  DateTime @map("expires_at") // Session expiration
  
  @@map("cart_sessions")
}

